{
  "push": {
    "name": "",
    "vcs": true
  },
  "variables": {
    "atlas_username": "flyingcircus",
    "atlas_name": "nixos-15.09-x86_64",
    "version": "{{env `NIXOS_BUILD`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "30s",
      "boot_command": [
        "echo http://{{ .HTTPIP }}:{{ .HTTPPort}} > .packer_http<enter>",
        "mkdir -m 0700 .ssh<enter>",
        "curl $(cat .packer_http)/install_rsa.pub > .ssh/authorized_keys<enter>",
        "start sshd<enter>"
      ],
      "http_directory": "scripts",
      "iso_checksum_type": "sha256",
      "iso_checksum": "9025244359ecaa0df9173a0bbfe57428472c07c77f6f6fc16fd3e38f13762c53",
      "shutdown_command": "shutdown -h now",
      "ssh_private_key_file": "./scripts/install_rsa",
      "ssh_port": 22,
      "ssh_username": "root",
      "iso_url": "https://hydra.nixos.org/build/52491739/download/1/nixos-minimal-16.03.1349.dda40aa8d1-x86_64-linux.iso",
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux_64",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
          ["modifyvm", "{{.Name}}", "--memory", "1024", "--ioapic", "on", "--cpus", "2"]
        ],
      "headless": true
      }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/install.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "keep_input_artifact": false
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "version": "{{user `version`}}",
        "version_description": "Update to FCIO production evaluation {{user `version`}}"
      }
    ]
  ]
}
